pipeline {
    agent any

    stages {
        stage('git checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/satyagvv-git/learn.git'
            }
        }
    }

    stages {
        stage('terraform init') {
            steps {
                sh 'terraform init'
            }
        }
    }

    stages {
        stage('terraform plan') {
            steps {
                sh 'terraform plan'
            }
        }
    }

    stages {
        stage('terraform apply') {
            steps {
                sh 'terraform apply -auto-approve'
            }
        }
    }
}